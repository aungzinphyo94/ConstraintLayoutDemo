<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/circle_center"
              android:text="A"
              android:textSize="30sp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button1"
            android:text="12"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="360"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button2"
            android:text="3"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="90"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button3"
            android:text="6"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="180"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button4"
            android:text="9"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="270"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button5"
            android:text="1"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="30"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button6"
            android:text="2"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="60"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button7"
            android:text="4"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="120"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button8"
            android:text="5"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="150"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button9"
            android:text="7"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="210"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button10"
            android:text="8"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="240"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button11"
            android:text="10"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="300"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/button12"
            android:text="11"
            android:textSize="24sp"
            android:background="@android:color/transparent"
            app:layout_constraintCircle="@id/circle_center"
            app:layout_constraintCircleAngle="330"
            app:layout_constraintCircleRadius="100dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>